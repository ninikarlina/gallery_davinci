# This is an example .env.local file
# Copy this to .env and fill in your values

# Database Configuration
# PostgreSQL (recommended for development & production):
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/gallery_davinci"

# For Supabase/Cloud PostgreSQL:
# DATABASE_URL="postgresql://[user]:[password]@[host]:[port]/[database]"

# For Railway/Heroku (use provided DATABASE_URL):
# DATABASE_URL="postgresql://..."

# JWT Secret Key (change this to a random string in production!)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production_12345

# API URL (public)
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# Vercel Blob Storage Token
# Get this from: Vercel Dashboard -> Storage -> Create Blob Store -> Copy Token
BLOB_READ_WRITE_TOKEN=your_vercel_blob_token_here

# Environment
NODE_ENV=development

